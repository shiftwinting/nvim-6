  // diagnostic
  "diagnostic.enable": true,
  "diagnostic.infoSign": "Â»",
  "diagnostic.hintSign": "Â»",
  "diagnostic.errorSign": "âœ—",
  "diagnostic.warningSign": "â‰ˆ",
  "diagnostic.displayByAle": false,
  "diagnostic.refreshOnInsertMode": true,

  // calc
  "calc.replaceOriginalExpression": false,

  // pairs
  "pairs.enableCharacters": ["(", "[", "{", "'", "\"", "`"],

  // yank
  "yank.priority": 10,
  "yank.highlight.enable": true,
  "yank.highlight.duration": 100,
  "yank.limit": 2,
  "yank.list.maxsize": 100,
  "yank.enableCompletion": false,

  // python
  "python.sortImports.args": ["-m3"],
  "python.formatting.provider": "black",
  "python.formatting.autopep8Args": ["--ignore=E402, E501"],
  "python.formatting.blackArgs": ["--skip-string-normalization"],

  // javascript
  "javascript.suggestionActions.enabled": false,

  // prettier
  "prettier.printWidth": 90,
  "prettier.singleQuote": true,
  "prettier.eslintIntegration": true,

  // eslint
  "eslint.enable": false,
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": ["javascript", "typescript"],

  // preferences
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "markdown",
    "javascript",
    "typescript",
    "json",
    "rust"
  ],

  // git
  "git.enableGutters": true,
  "git.signOffset": 99,
  "git.addGBlameToVirtualText": false,
  "git.virtualTextPrefix": "     ",
  "git.branchCharacter": "ï˜",
  "git.addedSign.text": "â–",
  "git.changedSign.text": "â–",
  "git.removedSign.text": "â–",
  "git.topRemovedSign.text": "â€¾",
  "git.changeRemovedSign.text": "â‰ƒ",
  "git.addedSign.hlGroup": "GitAddHi",
  "git.changedSign.hlGroup": "GitModifyHi",
  "git.removedSign.hlGroup": "GitDeleteHi",
  "git.topRemovedSign.hlGroup": "GitDeleteHi",
  "git.changeRemovedSign.hlGroup": "GitDeleteHi",

  // languageservers
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  }
}
